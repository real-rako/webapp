              a(href='/') Home
            li
              a(href='/about') About
            li 
              a(href='/panel') Reviews
            li 
              a(href='/contact') Contact
            if loggedIn
              if isAdmin 
                li
                  a(href='/secret') Admin
                li
                  a(href='/logout') Logout
              else
                li
                  a(href='/logout') Logout
                
            else     
              li
                a(href='/login') Login
form(action='/api/addreview' method='POST')
  input(type='text' name='title' placeholder='Titel')
  input(type='text' name='author' placeholder='Auteur')
  input(type='text' name='description' placeholder='Beschrijving')
  input(type='test' name='image' placeholder='link naar afbeelding')
  button(type='submit') Review toevoegen
    script(src='/js/main.js')
