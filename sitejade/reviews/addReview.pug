html(lang='nl')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title rdr2 review
    link(rel='stylesheet' href='/css/style.css')
    link(rel="stylesheet", href='/css/addreview.css')
  body#all.all
    .navbar-container
      header
        a(href='/')
          img.logo(src='/images/logo.svg' alt='Games')
        nav
          a.hambtn(href='#')
            img#menu.menu(src='/images/ham.svg' alt='Mobilemenu')
          ul#nav.ShowDesk.HideDesk.menull
            li#exit.exit-btn.HideDesk
              img(src='/images/cancel-button.svg' alt='toggle menu')
